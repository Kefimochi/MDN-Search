{
  "name": "MDN Search Extension",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Simplify the process of using MDN docs in your every day life.",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "MDN-icon.png",
    "48": "MDN-icon.png",
    "128": "MDN-icon.png"
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "windows": "Ctrl+M",
        "mac": "Command+M",
        "chromeos": "Ctrl+M",
        "linux": "Ctrl+M"
      }
    }
  }
}
