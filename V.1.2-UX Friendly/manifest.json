{
  "name": "MDN Search Extension",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Simplify the process of using MDN in your every day life.",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "MDN-icon.png",
    "48": "MDN-icon.png",
    "128": "MDN-icon.png"
  },
  "commands": {
    "Ctrl+M": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "default_popup": "popup.html",
      "description": "Ctrl+M."
    }
  }
}
